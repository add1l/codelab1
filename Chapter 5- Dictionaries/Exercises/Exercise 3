glossary = {'variable': 'A named storage location in memory.',
            'function': 'A block of code that can be called by name.',
            'loop': 'A sequence of instructions that is repeated until a certain condition is met.',
            'conditional': 'A statement that executes different blocks of code depending on a given condition.',
            'list': 'An ordered collection of items (which can be of different types).',
            'dictionary': 'A collection of key-value pairs.',
            'tuple': 'An ordered, immutable collection of items.',
            'set': 'An unordered collection of unique items.',
            'module': 'A file containing Python definitions and statements.',
            'class': 'A template for creating user-defined objects.'}

for word, meaning in glossary.items():
    print(word, ":")
    print(meaning)
    print()
